{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "lib": [
      "ES2017",
      "ES2018.Promise",
      "DOM"
    ],
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist"
  }
}
